<%= render 'shared/error_messages', model: @building %>

<%= semantic_form_for @building do |f| %>
  <%= f.semantic_errors %>
	  <%= f.inputs name: "#{Building.model_name.human} <b>#{@building.name_was}</b>",
               disabled: @readonly do %>
    <%= f.input :name, input_html: {autofocus: true} %>
    <%= f.input :description %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, label: t('action.save') unless @readonly %>
    <%= f.action :cancel, as: :link, url: buildings_path,
                 label: t("action.#{@readonly ? 'back' : 'cancel'}") %>
  <% end %>
<% end %>
