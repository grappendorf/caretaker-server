<%= render 'shared/error_messages', model: @device_script %>

<%= semantic_form_for @device_script, validate: true do |f| %>
  <%= f.semantic_errors %>
  <%= f.inputs name: "#{DeviceScript.model_name.human} <b>#{@device_script.name}</b>",
               disabled: @readonly do %>
    <%= f.input :name,
                hint: t('attributes.device_script.name_hint'),
                input_html: {:autofocus => "autofocus"} %>
    <%= f.input :description,
                input_html: {class: 'input-xxlarge'} %>
    <%= f.input :enabled %>
    <%= f.input :script, as: :text,
                input_html: {class: 'codemirror'},
                hint: t('attributes.device_script.script_hint') %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, label: t('action.save') unless @readonly %>
    <%= f.action :cancel, as: :link, url: device_scripts_path,
                 label: t("action.#{@readonly ? 'back' : 'cancel'}") %>
  <% end %>
<% end %>
