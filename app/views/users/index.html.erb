<% provide :title, 'Users' %>

<form action="<%= request.fullpath %>" class="form-search">
  <div class="toolbar">
    <div>
      <div class="btn-group">
        <%= awesome_link_to t('action.new'), 'asterisk', new_user_path, class: 'btn' %>
      </div>
    </div>
    <div>
      <%= render 'shared/toolbar_search' %>
    </div>
  </div>
</form>

<%= paginated @users %>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th class="width-0"></th>
      <th class="width-40"><%= sortable :name, t('attributes.user.name') %></th>
      <th class="width-20"><%= sortable :roles, t('attributes.user.roles') %></th>
      <th class="width-40"><%= sortable :email, t('attributes.user.email') %></th>
      <th class="width-0"></th>
    </tr>
  </thead>
  <tbody>
    <%= render @users %>
  </tbody>
</table>

<%= paginated @users %>
