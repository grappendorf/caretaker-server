<%= render 'shared/error_messages', model: @dashboard %>

<%= semantic_form_for @dashboard, validate: true do |f| %>
  <%= f.semantic_errors %>
  <%= f.inputs name: "#{@dashboard.model_name.human} <b>#{@dashboard.name}</b>" do %>
    <%= f.input :name, input_html: {:autofocus => "autofocus"} %>
    <%= f.input :default %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, label: t('action.save') %>
    <%= f.action :cancel, as: :link, url: dashboards_path, label: t('action.cancel') %>
  <% end %>
<% end %>
